<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @opportunity.title %>
</p>

<p>
  <b>Responsibilities:</b>
  <%= @opportunity.responsibilities %>
</p>

<p>
  <b>Overview:</b>
  <%= @opportunity.overview %>
</p>

<p>
  <b>Qualifications:</b>
  <%= @opportunity.qualifications %>
</p>

<p>
	<b>Location:</b>
	<%= @opportunity.location %>
