<% if can? :update, @user %>
	<%= link_to 'Edit', edit_opportunity_path(@opportunity) %> |
<% end %>
<% if can? :destroy, @user %>
	<%= link_to "Destroy", @user, :method => :delete, :confirm => "Are you sure?" %> |
<% end %>
<% if can? :create, Applikation %>
	<%= link_to "Apply to the #{@opportunity.title} position", new_applikation_path(:opportunity => @opportunity.id) %>
<% end %>

<%= link_to 'Back', opportunities_path %>