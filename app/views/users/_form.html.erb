<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :fname %><br />
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :mname %><br />
    <%= f.text_field :mname %>
  </div>
  <div class="field">
    <%= f.label :lname %><br />
    <%= f.text_field :lname %>
  </div>
	
	<% if can? :manage, User %>
		<%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
	<% end %>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <div class="field">
    <%= f.label :pnum %><br />
    <%= f.text_field :pnum %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :referral %><br />
    <%= f.text_field :referral %>
  </div>
  <div class="field">
    <%= f.label :resume_txt %><br />
    <%= f.text_area :resume_txt %>
  </div>
  <div class="field">
    <%= f.label :resume_bin %><br />
    <%= f.text_field :resume_bin %>
  </div>
  <div class="field">
    <%= f.label :cletter %><br />
    <%= f.text_area :cletter %>
  </div>
